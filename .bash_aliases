# Custom aliases
alias rm='rm -Iv'
alias cls='clear'
alias free='free -h'
alias df='df -h'
alias du='du -h'
alias iostat='iostat -h'
alias mkdir='mkdir -p'
alias yout='yt-dlp -f 140 --output "%(title)s.%(ext)s"'
alias gradlew='./gradlew'
alias xclip='xclip -selection clipboard'

# ls reverse sorted by time
alias llt='ll -rt'

# ls reverse sorted by size
alias lls='ll -rS'

# run firefox (flatpack version
alias firefox='flatpak run org.mozilla.firefox'

